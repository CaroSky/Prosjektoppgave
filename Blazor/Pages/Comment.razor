
@using SharedModels.Entities
@using SharedModels.ViewModels;
@using Blazor.Data
@using System.Security.Claims
@using System.IdentityModel.Tokens.Jwt;

@inject CommentService CommentService
@inject NavigationManager NavigationManager
@inject CustomAuthenticationStateProvider AuthenticationStateProvider



    @if (comments == null)
    {
        
        @if (user.Identity.IsAuthenticated)
        {
            <button class="btn btn-success ml-auto" @onclick="@(() => CreateCommentDialog("Create"))">Add New Comment</button>
        }
    }
    else
{
    @if (user.Identity.IsAuthenticated)
    {
        <button class="btn btn-success ml-auto" @onclick="@(() => CreateCommentDialog("Create"))">Add New Comment</button>
    }
    @if (comments.Any())
    {
        <div class="comment-container">
            <p><span class="badge">@comments.Count()</span> Comments:</p>
            @foreach (var comment in comments)
            {
                <div class="comment-separator"></div>
                <div class="row mb-2">
                    <div class="col-sm-2 text-center">
                        <img src="path_to_avatar.jpg" class="img-circle" height="65" width="65" alt="Avatar">
                    </div>
                    <div class="col-sm-8">
                        <h4>@comment.OwnerId<small class="small-text">@comment.Created.ToString("MMM dd, yyyy, h:mm tt")</small></h4>
                        <p>@comment.Content</p>
                    </div>
                    @if (comment.OwnerId == _userId)
                    {
                        <div class="col-sm-2 d-flex justify-content-end">
                            <button class="btn btn-sm btn-outline-secondary" @onclick="@(() => EditCommentDialog("Update", comment.CommentId, comment))">Edit</button>
                            <button class="btn btn-sm btn-outline-danger" @onclick="@(() => DeleteComment(comment.CommentId))">Delete</button>
                        </div>
                    }
                </div>
            }
        </div>
    }

}


